{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "lib": ["esnext"],
    "composite": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "rootDir": "../",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["**/*.ts", "**/*.tsx", "../packages/template/src/**/*.ts"]
}
